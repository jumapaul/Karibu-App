<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_sections"
    app:startDestination="@id/categoriesFragment"
    >

    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.pauljuma.karibuapp.ui.fragments.CategoriesFragment"
        android:label="fragment_categories"
        tools:layout="@layout/fragment_categories" >
        <action
            android:id="@+id/action_categoriesFragment_to_breakFastFragment"
            app:destination="@id/breakFastFragment" />
        <action
            android:id="@+id/action_categoriesFragment_to_dessertsFragment"
            app:destination="@id/dessertsFragment" />
        <action
            android:id="@+id/action_categoriesFragment_to_lunchAndDinnerFragment"
            app:destination="@id/lunchAndDinnerFragment" />
        <action
            android:id="@+id/action_categoriesFragment_to_drinksFragment"
            app:destination="@id/drinksFragment" />
    </fragment>
    <fragment
        android:id="@+id/breakFastFragment"
        android:name="com.pauljuma.karibuapp.ui.fragments.categories.BreakFastFragment"
        android:label="fragment_break_fast"
        tools:layout="@layout/fragment_break_fast" />
    <fragment
        android:id="@+id/dessertsFragment"
        android:name="com.pauljuma.karibuapp.ui.fragments.categories.DessertsFragment"
        android:label="fragment_desserts"
        tools:layout="@layout/fragment_desserts" />
    <fragment
        android:id="@+id/drinksFragment"
        android:name="com.pauljuma.karibuapp.ui.fragments.categories.DrinksFragment"
        android:label="fragment_drinks"
        tools:layout="@layout/fragment_drinks" />
    <fragment
        android:id="@+id/lunchAndDinnerFragment"
        android:name="com.pauljuma.karibuapp.ui.fragments.categories.LunchAndDinnerFragment"
        android:label="fragment_lunch_and_dinner"
        tools:layout="@layout/fragment_lunch_and_dinner" />
</navigation>